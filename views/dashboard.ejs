        function renderTasks() {
            const taskList = document.getElementById('taskList');
            if (!taskList) return;

            if (tasks.length === 0) {
                taskList.innerHTML = '<li class="empty-tasks">No hay tareas. Agrega una nueva tarea arriba.</li>';
