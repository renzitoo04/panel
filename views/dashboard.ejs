            const roas = (revenue / spend).toFixed(2);
            const roasClass = parseFloat(roas) >= 2 ? 'var(--accent-green)' : parseFloat(roas) >= 1 ? 'var(--accent-yellow)' : 'var(--accent-red)';

            document.getElementById('roasResult').innerHTML = `
